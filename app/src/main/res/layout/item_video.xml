<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_item_height"
    android:weightSum="100">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30">

        <ImageView
            android:id="@+id/image_item_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/video_item_image_margin"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/video_item_image_margin"
            android:src="@mipmap/ic_play" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/video_item_desc_margin"
        android:layout_weight="70"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_filename_item_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/video_item_desc_margin"
            android:text="FILE_NAME" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/video_item_desc_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_filetype_item_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/video_item_desc_margin"
                android:text="FILE_TYPE" />

            <TextView
                android:id="@+id/text_filesize_item_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/video_item_desc_margin"
                android:text="FILE_SIZE" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>