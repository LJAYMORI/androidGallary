<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/actionbar_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_all_actionbar"
            android:layout_width="@dimen/actionbar_tab_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/actionbar_tab_top_bottom_padding"
            android:paddingLeft="@dimen/actionbar_tab_left_right_padding"
            android:paddingRight="@dimen/actionbar_tab_left_right_padding"
            android:paddingTop="@dimen/actionbar_tab_top_bottom_padding"
            android:text="@string/actionbar_all"
            android:textColor="@color/actionbar_letter_focus" />

        <TextView
            android:id="@+id/text_picture_actionbar"
            android:layout_width="@dimen/actionbar_tab_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/actionbar_tab_top_bottom_padding"
            android:paddingLeft="@dimen/actionbar_tab_left_right_padding"
            android:paddingRight="@dimen/actionbar_tab_left_right_padding"
            android:paddingTop="@dimen/actionbar_tab_top_bottom_padding"
            android:text="@string/actionbar_picture"
            android:textColor="@color/actionbar_letter_unfocus" />

        <TextView
            android:id="@+id/text_video_actionbar"
            android:layout_width="@dimen/actionbar_tab_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/actionbar_tab_top_bottom_padding"
            android:paddingLeft="@dimen/actionbar_tab_left_right_padding"
            android:paddingRight="@dimen/actionbar_tab_left_right_padding"
            android:paddingTop="@dimen/actionbar_tab_top_bottom_padding"
            android:text="@string/actionbar_video"
            android:textColor="@color/actionbar_letter_unfocus" />

        <TextView
            android:id="@+id/text_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST" />
    </LinearLayout>

</RelativeLayout>